@model GreatestFilms.Models.Film

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="film">
    <div class="poster">
        <p><img src="@Url.Content(Model?.Poster)" /></p>
    </div>
    <div class="text">
        <p>@Html.DisplayFor(model => model.Name)</p>
        <p>Director: @Html.DisplayFor(model => model.DirectorName)</p>
        <p>Genre: @Html.DisplayFor(model => model.Genre)</p>
        <p>Realese year: @Html.DisplayFor(model => model.Date)</p>
        <p>@Html.DisplayFor(model => model.Description)</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
        

    </div>
</div>